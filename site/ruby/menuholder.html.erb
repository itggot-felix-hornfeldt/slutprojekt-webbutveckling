    namei = pizzaName.length
    while i < namei
%>
    <div class="menuitembox">
        <div class="menuitemimagepricebox">
            <div class="menuitemimagebox">
                <div class="menuitemimage" id="<%=pizzaName[i]%>bg"></div>
            </div>
            <div class="menuitempricebox">
            <%
                if i <= 2
            %> 
                <p class="menuitemprice"><a class="lineoverprice"><%=price[i]%> kr.</a><a class="specialpriceactiv"> <%=specialPrice[i]%> kr.</a></p>
            <%
                else
            %>
                <p class="menuitemprice"><%=price[i]%> kr.</p>
            <%
                end
            %>
            </div>
        </div>
        <div class="menuiteminfobox">
            <div class="menuiteminfonamebox">
                <h2 class="menuiteminfoname">Pizza <%=pizzaName[i]%></h2>
            </div>
            <div class="menuiteminfoinfobox">
                <p class="menuiteminfoinfo"><%=infoInfo[0]%></p>
            </div>
            <div class="menuiteminfoaddbox">
                <a onclick="addToCartAlert();"><button class="menuiteminfoadd">LÃ¤gg i kundvagn</button></a>
            </div>
        </div>
